<?xml version='1.0' encoding='utf-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.alinesno.infra.common</groupId>
        <artifactId>alinesno-infra-platform-parent</artifactId>
        <version>1.1.0-SNAPSHOT</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <packaging>pom</packaging>

    <groupId>com.alinesno.infra.smart</groupId>
    <artifactId>alinesno-infra-smart-brain-parent</artifactId>
    <version>${revision}</version>

    <properties>
        <revision>3.0.0-SNAPSHOT</revision>

        <alinesno.infra.common.version>1.2.0-SNAPSHOT</alinesno.infra.common.version>
        <commons-text.version>1.1</commons-text.version>

        <fastjson.version>2.0.47</fastjson.version>
        <poi.version>4.1.2</poi.version>
        <elasticsearch-rest-high-level-client.version>7.17.23</elasticsearch-rest-high-level-client.version>
        <elasticsearch.version>8.7.0</elasticsearch.version>
        <httpclient.version>4.5.13</httpclient.version>
        <commons-compress.version>1.27.1</commons-compress.version>

        <docx4j.core.version>11.5.4</docx4j.core.version>
        <docx4j.importxhtml.version>11.4.8</docx4j.importxhtml.version>

        <!-- 模型适配 -->
        <model-adapter.version>3.0.1-M2-SNAPSHOT</model-adapter.version>
    </properties>

    <modules>
		<!-- 助手服务 -->
        <module>alinesno-infra-smart-expert-facade</module>  <!-- 接口和引用 -->
        <module>alinesno-infra-smart-expert-domain</module>  <!-- 领域服务 -->
        <module>alinesno-infra-smart-expert-adapter</module> <!-- 适配层 -->
        <module>alinesno-infra-smart-expert-tool</module>  <!-- 角色工具 -->

        <module>alinesno-infra-smart-expert-dataset</module> <!-- 数据集(知识库)-->
        <module>alinesno-infra-smart-expert-role</module> <!-- 角色服务 -->
        <module>alinesno-infra-smart-expert-workflow</module> <!-- 流程编排 -->
        <module>alinesno-infra-smart-expert-im</module> <!-- 第三方IM通信 -->
        <module>alinesno-infra-smart-expert-gateway</module>  <!-- 接口服务 -->
        <module>alinesno-infra-smart-expert-portal</module>  <!-- 场景工作台门户 -->

        <module>alinesno-infra-smart-expert-template</module>  <!-- 模板管理 -->
        <module>alinesno-infra-smart-expert-scene</module>  <!-- 场景管理 -->
        <module>alinesno-infra-smart-expert-deepsearch</module> <!-- 深度搜索 -->
        <module>alinesno-infra-smart-expert-publish</module>  <!-- 角色分发 -->
        <module>alinesno-infra-smart-expert-point</module>  <!-- 积分管理 -->

        <module>alinesno-infra-smart-expert-boot</module>  <!-- 启动服务 -->
    </modules>

    <!-- 公共包依赖 -->
    <dependencies>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
            <version>${commons-text.version}</version>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- poi-tl_start -->
            <dependency>
                <groupId>com.deepoove</groupId>
                <artifactId>poi-tl</artifactId>
                <version>1.10.0</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi</artifactId>
                <version>4.1.2</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>ooxml-schemas</artifactId>
                <version>1.4</version>
            </dependency>
            <!-- poi-tl_end -->

            <!-- word_start -->
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-examples</artifactId>
                <version>${poi.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-excelant</artifactId>
                <version>${poi.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-ooxml</artifactId>
                <version>${poi.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-ooxml-schemas</artifactId>
                <version>${poi.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.poi</groupId>
                <artifactId>poi-scratchpad</artifactId>
                <version>${poi.version}</version>
            </dependency>
            <!-- word_end -->

            <!-- httpclient -->
            <dependency>
                <groupId>org.apache.httpcomponents</groupId>
                <artifactId>httpclient</artifactId>
                <version>${httpclient.version}</version>
            </dependency>

            <!-- elasticsearch_java_start -->
            <dependency>
                <groupId>co.elastic.clients</groupId>
                <artifactId>elasticsearch-java</artifactId>
                <version>${elasticsearch.version}</version>
            </dependency>
            <dependency>
                <groupId>org.elasticsearch.client</groupId>
                <artifactId>elasticsearch-rest-high-level-client</artifactId>
                <version>${elasticsearch-rest-high-level-client.version}</version>
            </dependency>
            <dependency>
                <groupId>org.elasticsearch.client</groupId>
                <artifactId>elasticsearch-rest-client</artifactId>
                <version>${elasticsearch.version}</version>
            </dependency>
            <dependency>
                <groupId>org.elasticsearch</groupId>
                <artifactId>elasticsearch</artifactId>
                <version>${elasticsearch.version}</version>
            </dependency>
            <!-- elasticsearch_java_end -->

            <!-- 确保使用统一的 commons-compress 版本 -->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-compress</artifactId>
                <version>${commons-compress.version}</version>
            </dependency>

            <!-- docx4j 核心库 -->
            <dependency>
                <groupId>org.docx4j</groupId>
                <artifactId>docx4j-core</artifactId>
                <version>${docx4j.core.version}</version>
            </dependency>

            <!-- 如果需要使用 JAXB Reference Implementation -->
            <dependency>
                <groupId>org.docx4j</groupId>
                <artifactId>docx4j-JAXB-ReferenceImpl</artifactId>
                <version>${docx4j.core.version}</version>
            </dependency>

            <!-- 如果需要将 Word 转换为 PDF -->
            <dependency>
                <groupId>org.docx4j</groupId>
                <artifactId>docx4j-export-fo</artifactId>
                <version>${docx4j.core.version}</version>
            </dependency>

            <!-- 如果需要支持 XHTML 转换 -->
            <dependency>
                <groupId>org.docx4j</groupId>
                <artifactId>docx4j-ImportXHTML</artifactId>
                <version>${docx4j.importxhtml.version}</version>
            </dependency>

            <dependency>
                <groupId>com.agentsflex</groupId>
                <artifactId>alinesno-smart-model-adapter-core</artifactId>
                <version>${model-adapter.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-simple</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

        </dependencies>
    </dependencyManagement>

</project>

